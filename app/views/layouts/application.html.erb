<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeAnswers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <!-- <a href="/">Home</a> -->
    <%= link_to 'Home', root_path %>
    |
    <!-- <a href="/contacts/new">Contact Us</a> -->
    <%# `link_to` is a method called view helper that comes with Rails and it generate <a> tag %>
    <%= link_to 'Contact Us', contacts_new_path %>
    |
    <%= link_to 'New Question', new_question_path %>
    |
    <%= link_to 'All Questions', questions_path %>
    |
     <% if user_signed_in? %>
      Hello <%= current_user.first_name %> |
      <%= link_to "Logout", session_path, method: :delete, data: {confirm: "are you sure you want to log out?"} %>
    <% else %>
      <%= link_to "Login", new_session_path %>
      |
      <%= link_to "Sign Up", new_user_path %>
    <% end %>
    <hr>
    <% flash.each do |type, message| %>
      <div class="flash flash-<%= type %>">
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
