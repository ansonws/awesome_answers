<h1>Questions</h1>

<ul class="question-list">
    <% @questions.each do |question| %>
        <li>
            <%= link_to(question.title, question_path(question)) %> <br>
            <small>
                Posted <%= time_ago_in_words(question.created_at) %> ago
            </small>
            |
            <small>
                Seen <%= pluralize(question.view_count, "time") %>
            </small>
        </li>
    <% end %>
</ul>